@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @if (ViewBag.Message != null)
    {
        var displaytype = "alert alert-success";
        if (ViewBag.IsError)
        {
            displaytype = "alert alert-danger";
        }
        <p class="@displaytype">@ViewBag.Message</p>
    }
    <h2>Leveraging Okta APIs</h2>
    <p class="lead"></p>

    <p class="lead">
        <ul>
            <li>Widget Login</li>
            <li>OpenID Connect Login</li>
            <li>User Registration - CRUD</li>
            <li>Users & Apps REST APIs</li>
        </ul>
    </p>
   
</div>

